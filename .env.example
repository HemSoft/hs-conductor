# hs-conductor Environment Configuration
# Copy to .env and fill in your values

# ============================================================
# INNGEST CONFIGURATION
# ============================================================
# Generate with: openssl rand -hex 32
INNGEST_EVENT_KEY=your-event-key-here
INNGEST_SIGNING_KEY=your-signing-key-here

# Inngest dev server URL (auto-started by run.ps1)
INNGEST_BASE_URL=http://localhost:2901

# Set to 0 for production (local dev uses inngest-cli)
INNGEST_DEV=0

# ============================================================
# GITHUB COPILOT SDK
# ============================================================
# Uses GitHub Copilot CLI for authentication
# Install: npm install -g @github/copilot-cli
# Authenticate: copilot auth

# Default model for AI Worker (optional)
# Options: claude-sonnet-4.5, gpt-5, etc.
COPILOT_MODEL=claude-sonnet-4.5

# ============================================================
# APPLICATION SETTINGS
# ============================================================
# Data directory for plans, templates, and runs
CONDUCTOR_DATA_PATH=./data

