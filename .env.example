# hs-conductor Environment Configuration
# Copy to .env and fill in your values

# ============================================================
# INNGEST CONFIGURATION (Self-hosted)
# ============================================================
# Generate with: openssl rand -hex 32
INNGEST_EVENT_KEY=your-event-key-here
INNGEST_SIGNING_KEY=your-signing-key-here

# Inngest server URL (self-hosted)
INNGEST_BASE_URL=http://localhost:8288

# Set to 0 for self-hosted (disables cloud mode)
INNGEST_DEV=0

# ============================================================
# GITHUB COPILOT SDK
# ============================================================
# Your GitHub Copilot subscription is used automatically
# No API key needed - uses your authenticated `gh` CLI

# Default model for AI Worker (optional)
# Options: claude-sonnet-4.5, gpt-5, etc.
COPILOT_MODEL=claude-sonnet-4.5

# ============================================================
# APPLICATION SETTINGS
# ============================================================
# Data directory for plans, templates, and runs
CONDUCTOR_DATA_PATH=./data

# Server port for the Inngest SDK endpoint
CONDUCTOR_PORT=3333

# Log level: trace, debug, info, warn, error
LOG_LEVEL=info
